    <style>
    @media only screen and (max-width: 700px) {

        .navbar {
            width: 100%;
            position: fixed;
            z-index: 1;
            top: 0;
        }
        #thanhmenu {
            width: auto;
            background-color: rgb(248, 26, 14);
            text-align: center;
            height: 60px;
        }

        #navbar-brand {
            margin-left: 5px;
        }

        #giohang {
            width: auto;
            margin-right: 20px;
            text-align: center;


        }
        .menu-dropdown {
            display: none;
            position: absolute;
            border: 1px solid #ccc;
            z-index: 1;
            top: 85%;
            list-style: none;
            width: 80%;
            padding: 0;
            background-color: #f4f4f4;
        }

        .menu-dropdown li {
            border: #ccc solid 1px;
            padding: 10px;
        }

        .menu-dropdown li a {
            text-align: center;
            height: 30%;
            text-decoration: none;
            /* Loại bỏ gạch chân mặc định của liên kết */
            color: #595858;
            /* Màu chữ cho các mục menu */
            font-size: 15px;
        }

    }
     @media only screen and (min-width: 701px) {
        .navbar {
            width: 100%;
            position: fixed;
            z-index: 1;
            top: 0;
        }

        #thanhmenu {
            width: auto;
            background-color: rgb(248, 26, 14);
            text-align: center;
            height: 60px;
        }

        #navbar-brand {
            margin-left: 5px;
        }

        #giohang {
            width: auto;
            margin-right: 20px;
            text-align: center;


        }
        .menu-dropdown {
            display: none;
            position: absolute;
            border: 1px solid #ccc;
            z-index: 1;
            top: 85%;
            list-style: none;
            width: 16.1%;
            padding: 0;
            background-color: #f4f4f4;
        }

        .menu-dropdown li {
            border: #ccc solid 1px;
            padding: 10px;
        }

        .menu-dropdown li a {
            text-align: center;
            height: 30%;
            text-decoration: none;
            /* Loại bỏ gạch chân mặc định của liên kết */
            color: #595858;
            /* Màu chữ cho các mục menu */
            font-size: 15px;
        }
        
    }
    </style>
</head>

<body style="font-family: Arial, sans-serif;margin: 0;background-color: #ffffff;">
    <div id="navbar">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">

                <div id="thanhmenu">
                    <i id="nutxomenu" class="fas fa-bars"
                        style="width: auto; height:auto; margin-left: 10px; margin-top: 20px; color:#f4f4f4"></i>
                    <p style="font-size: 15px;color:#f4f4f4" id="navbar-brand" class="navbar-brand" href="#">Danh mục
                        dịch vụ</p>
                    <i class="fa-solid fa-chevron-down"
                        style="width: auto; height:auto; margin-left: 40px; margin-top: 20px; margin-right: 10px; color:#f4f4f4"></i>
                </div>

                <ul id="menuDropdown" class="menu-dropdown">
                    <li>
                        <i class="fa-solid fa-mobile-screen-button"></i>
                        <a href="#"> Sửa chữa điện thoại</a>
                    </li>
                    <li>
                        <i class="fa-solid fa-headphones"></i>
                        <a href="#"> Phụ kiện</a>
                    </li>
                </ul>


                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Giới thiệu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Tin tức & khuyến mãi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Quy định bảo hành</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#lienhe">Liên hệ</a>
                        </li>

                    </ul>
                </div>
                <div id="giohang">
                    <p style="display: inline;">giỏ hàng</p>
                    <p style="display: inline;">/</p>
                    <p style="display: inline;">0đ</p>
                    <i class="fa-solid fa-cart-shopping" style="width: auto; height:auto;"></i>
                </div>

            </div>
        </nav>
<div id="body">

</div>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var menuDropdown = document.getElementById("menuDropdown");
            var nutxomenu = document.getElementById("thanhmenu");

            // Xử lý sự kiện khi click vào nutxomenu để hiển thị hoặc ẩn menu
            nutxomenu.addEventListener("click", function () {
                // Kiểm tra nếu menuDropdown đang ẩn
                if (menuDropdown.style.display === "none" || menuDropdown.style.display === "") {
                    // Hiển thị menuDropdown
                    menuDropdown.style.display = "block";
                } else {
                    // Ẩn menuDropdown nếu nó đang hiển thị
                    menuDropdown.style.display = "none";
                }
            });

        });

    </script>
</body>

</html>